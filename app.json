{
  "expo": {
    "name": "Visita Pastoral",
    "slug": "visita-pastoral",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/visita_pastoral_logo.png",
    "splash": {
      "image": "./assets/visita_pastoral_splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Este aplicativo ultiliza a camera"
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/visita_pastoral_logo.png",
        "backgroundColor": "#E6B402"
      },
      "package": "com.visita_pastoral.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "aa757eab-46f4-49ac-9b45-c401c9a23132"
      }
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Este aplicativo ultiliza a galeria do seu dispositivo",
          "cameraPermission": "Este aplicativo ultiliza a camera"
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "portrait"
        }
      ]
    ],
    "packagerOpts": {
      "config": "metro.config.js"
    }
  }
}
